CC := gcc
SRC := school.c main.c
OBJ := $(SRC:.c=.o)
NAME := school
CFLAGS := -Wall -Werror -Wextra -pedantic
.PHONY: clean fclean oclean re

all: $(NAME)

$(NAME): $(SRC) m.h
	$(CC) $(CFLAGS) -o $(NAME) $(SRC)

clean:
	$(RM) *~ *# $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: fclean all
